        .set_alerts
          .field
            h2 Set Alerts
          .clear
          .field
            p Enter an email address to recieve emails. Or, enter a phone number to receive text messages.
          .field.email
            .input
              input(placeholder='my@email.com')
              label E-mail Address
            .toggle
              .bg
                .option Emails
                .option.active off
