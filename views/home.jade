include pull_down
.center_column

  .derek_hero
    .top
      .left
        img(src='/images/steven_card.png')
      .right
        h1.one 
          .one QR Code 
          .two Business
          .three Cards

  .steve_hero
    .top
      .hands
        .scan 
          img(src='/images/scanhands.png')
          p They Scan!
        .notify
          img(src='/images/notifyhands.png')
          p You get Notified!
      .copy
        .logo2
          img(src='/images/logo.png')
        .one
          p QR Code
        .two
          p Business Cards
        .three
          p That Give You Control
  .bottom
    .left
      img.scanhands(src='/images/scanhands.png')
      .home_designer
        h1.two
          .one Design Cards
          .two Add your personal touch and flare
        .controls
          .titles
            .title.active Text
            .title QR
            .title Background
            .clear
          .areas
            .area.active
            .area
            .area
        .card
        .clear
        .themes
    .right
      h1.two 
        .one Get Notified!
        .two Email or text alerts when they scan
      img.get_guy(src='/images/get_guy.png')
      .notify_form
        h2 Set Alerts
        p Learn who's interested in you
        .field.email
          input(placeholder='my@email.com')
          .toggle
            .bg
              .option.active on
              .option off
        .field.text
          input(placeholder='555.555.5555')
          .toggle
            .bg
              .option on
              .option.active off
        h2 Set Links
        p Where they go, when they scan
        .link_editor
          ul.socials
            li.facebook F
            li.twitter.shift t
            li.linkedin l
            li.google g
          .links
            .field
              .button +
              input(placeholder='mysite.com')
      h1.two.checkout_header
        .one Checkout
        .two The last bit of info we need
      .shipping_form
        h2 Shipping
        p Free via USPS priority mail
        .field
          input.street(placeholder='123 Main St.')
          img.map(src='')
          .full_address
          input.zip_code(placeholder='85022')
        h2 Quantity
        .quantity
          .option(cards=100,cost=10)
            .label 100 cards
            img(src='/images/100.png')
            .value 
              span.dollar $
              span 10
          .option(cards=250,cost=25)
            .label 250 cards
            img(src='/images/250.png')
            .value 
              span.dollar $
              span 25
          .option(cards=500,cost=35)
            .label 500 cards
            img(src='/images/500.png')
            .value 
              span.dollar $
              span 35
          .option(cards=1500,cost=75)
            .label 1500 cards
            img(src='/images/1500.png')
            .value 
              span.dollar $
              span 75
        h2 Credit Card
        .billing
          .credit-card
            .field
              label cc #
              input(placeholder='4111111111111111')
          .cvc
            .field
              label cvc
              input(placeholder='1234')
          .expiration
            .field
              label Exp.
              select.card_expiry_month(name='credit_card[expiry_month]')
                - months = ['January','February','March','April','May','June','July','August','September','October','November','December']
                - for (var i in months)
                  option(value=(i*1)+1)=months[i]
              select.card_expiry_year(name='credit_card[expiry_year]')
                - for (var year = 2011; year<2032; year++)
                  option(value=year)=year
      .button.normal.checkout
        img(src='/images/lock_icon.png')
        | Purchase