.gallery-select
.section.first
  .cell-bg
  .cell-content
    h3 Theme Admin
    .designer
      .card
        .qr
          img(src='/images/qr.png')
        ul.content
          - for(var i=0; i<12; i++)
            .line(class='nth-'+i) line number  
              =i+1
      .options
        ul
          li.category
            label Category
            input(placeholder='Professional')
          li.image
            label Card Image
            form(target='hiddenFrame',action='/uploadImage',method='POST',enctype='multipart/form-data')
              input(type='file',name='image')
            .img-loader
              iframe(name='hiddenFrame')
          li.gradient
            label Web Gradient
            input.color1(placeholder='#000000')
            input.color2(placeholder='#FFFFFF')
          li.field
            label Field Position/Size
            label.label Height: 
            input.height(placeholder='10%',title='height')
            label.label Width: 
            input.width(placeholder='90%',title='width')
            label.label X: 
            input.x(placeholder='10%',title='X')
            label.label Y: 
            input.y(placeholder='40%',title='Y')
          li.buttons
            .button.normal.save Save
            .button.gray.delete Delete
      .clear
    .category.active
      h4 (No Category)
      ul.gallery
        //
          li.card
            a(href='#').theme-1.active 6
            a(href='#').theme-2 12
    .button.gray.create Add New