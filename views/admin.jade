.gallery_select
.section
  .cell_bg
  .cell_content
    .button.small.gray.add_new Create New [+]
    h3 Theme Admin
    p.subtitle
      b keyboard shortcuts:
      |  try the arrow keys, ctrl+z and shift!
    .designer
      .web_bg
      .web_fg
      .web_fg2
      .card
        .qr
          .background
        ul.content
      .options
        .tab.defaults.active
          h4 General
          ul
            li.category_field
              label Category
              input(placeholder='Professional')
            li.image
              label Background
              form(target='hiddenFrame',action='/upload-image',method='POST',enctype='multipart/form-data')
                input(type='file',name='image')
              .img_loader
                iframe(name='hiddenFrame')
            li.gradient
              label Website Colors
              .color.color1
              .color.color2
        .tab.font_style
          h4 Font
          ul
            li
              .color.font_color
              .alignment
                .left
                .center
                .right
            li
              .size
                .decrease
                .increase
                .slider
                .indicator
            li
              select.font_family(size='6')
                option
                option Luckiest Guy
                option Arial
        .tab.qr_style
          h4 QR
          ul
            li
              label Colors
              .color.qr_color1
              .color.qr_color2
            li
              label Opacity
              .qr_color2_alpha
            li
              label Border Style
              select.qr_radius(size='2',rows='2')
                option(value=0) square
                option(value=10) round
        .buttons
          .button.normal.save Save
          .button.gray.delete Delete
      .views
        .toggle
          .disabled
            .option.six.active 6
            .option.twelve 10
            .option.web Web
      .clear
      .test_link
        a(href='#', target="_blank") Test
      .clear
