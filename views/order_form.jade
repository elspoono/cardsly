
.gallery_select
.help_container
  .help_trigger.button.gray ?
  .help_close.button.normal X
  .help_overlay
  .help_img
  .design_container
    .section.first
      .cell_bg
      .cell_content
          h3 Step 1 : Design Your Cards
          p.subtitle Please type your name (hit enter to go to next line):
          .active_view
            if session && session.saved_form && session.saved_form.active_view
              =session.saved_form.active_view
          .active_theme_id
            if session && session.saved_form && session.saved_form.active_theme_id
              =session.saved_form.active_theme_id
          .home_designer
            .card_container
              .card
                .qr
                  .background
                if session && session.saved_form && session.saved_form.values && session.saved_form.values.length
                  .content
                    - for(var i=0; i<session.saved_form.values.length; i++)
                      .line
                        =session.saved_form.values[i]
                else
                  .content.defaults
                    .line John Stamos
                    .line Uncle Jesse
                    .line 555.555.5555
                    .line john@stamos.com
                    .line
                    .line
                    .line
                    .line
                    .line
                    .line
          .home_options
            .views
              .subtitle Number of Fields
              .toggle
                .disabled
                  .option.six.active 6
                  .option.twelve 10
          .categories
    .clear
.section
  .cell_bg
  .cell_content
    h3 Step 2 : Select Details and Shipping
    .order_details
      ul.radio_text_fields.left.quantity
        li
          img.promo(src=' /images/promo.png')
          p Quantity:
        - quantity = 10
        if session && session.saved_form && session.saved_form.quantity
          - quantity = session.saved_form.quantity
        li
          input(
            type='radio'
            name='quantity'
            value='10'
            checked= (quantity==10 ? 'checked' : false)
            id='quantity_1'
          )
          label(for='quantity_1') 100 cards for $10
            .subtitle 10 cents per card
        li
          input(
            type='radio'
            name='quantity'
            value='20'
            checked= (quantity==20 ? 'checked' : false)
            id='quantity_2'
          )
          label(for='quantity_2') 250 cards for $20
            .subtitle 8 cents per card
        li
          input(
            type='radio'
            name='quantity'
            value='30'
            checked= (quantity==30 ? 'checked' : false)
            id='quantity_2'
          )
          label(for='quantity_3') 500 cards for $30
            .subtitle 6 cents per card
        li
          input(
            type='radio'
            name='quantity'
            value='60'
            checked= (quantity==60 ? 'checked' : false)
            id='quantity_2'
          )
          label(for='quantity_4') 1500 cards for $60
            .subtitle 4 cents per card
      ul.radio_text_fields.right.shipping_method
        li
          p Speed:
        - shipping_method = 0
        if session && session.saved_form && session.saved_form.shipping_method
          - shipping_method = session.saved_form.shipping_method
        li
          input(
            type='radio'
            name='shipping_method'
            value='0'
            checked= (shipping_method==0 ? 'checked' : false)
            id='shipping_method_1'
          )
          label(for='shipping_method_1') USPS Priority Mail for $0
            .subtitle 1-3 days
        li
          input(
            type='radio'
            name='shipping_method'
            value='25'
            checked= (shipping_method==25 ? 'checked' : false)
            id='shipping_method_2'
          )
          label(for='shipping_method_2') USPS Express Mail for $25
            .subtitle overnight
      ul.text_fields.shipping.righter
        li
          p Shipped To:
        li
          label Address
          input.address(
            placeholder='221 Baker, Suite B'
            value= (session.saved_address ? session.saved_address.address : '')
          )
        li
          label City or Zip
          input.city(
            placeholder='90210'
            value= (session.saved_address ? session.saved_address.city : '')
          )
        li
          .address_container
            h5 Shipping Address
            .address_result
              if session && session.saved_address
                !=session.saved_address.full_address
      .clear

    .img_loader
      img(src='/images/biz_card1.png')
      .google.hover
      .facebook.hover
      .twitter.hover
      .linkedin.hover
      .new.hover
      .google.click
      .facebook.click
      .twitter.click
      .linkedin.click
      .new.click
.section
  .cell_bg
  .cell_content
    h3 Step 3: Sign In
    .signins
      if user
        .check
          ul
            li.do_send_confirm
              input(type='checkbox',id='do_send_confirm',checked='checked')
              label(
                for='do_send_confirm'
              ) Send a confirmation email
            li.do_send_shipping
              input(type='checkbox',id='do_send_shipping',checked='checked')
              label(
                for='do_send_shipping'
              ) Send a shipping receipt
            li.email_to_send
              label(for='email_to_send') To:
              input(
                name='email_to_send'
                id='email_to_send'
                value=user.email
                placeholder='my@email.com'
              )

      else
        p
          .socials
            p
              | Sign in with your existing social account:
            a.button.twitter(href='/auth/twitter')
              span Twitter
            a.button.facebook(href='/auth/facebook')
              span Facebook
            a.button.linkedin(href='/auth/linkedin')
              span LinkedIn
            a.button.google(href='/auth/google')
              span Google
            .clear
            p Or, create a new account:
          .local
            a.button.new(href='#')
              span Create a username and password
            .clear
.section
  .cell_bg
  .cell_content
    h3 Step 4: Confirm and Buy
    .order_total
      .card_side
        .my_card
        .address_container
          h5 Shipping Address
          .address_result
            if session && session.saved_address
              !=session.saved_address.full_address
      .details
        .total Total Price: &nbsp;
          .price $10
        if user && user.stripe && user.stripe.id
          .existing_payment
            .type
              =user.stripe.active_card.card_type
            .expiry
              =user.stripe.active_card.exp_month
              | /
              =user.stripe.active_card.exp_year
            .last_4
              | **** - **** - **** - 
              =user.stripe.active_card.last4
            .small.button.gray Use New Card
          .use_existing_payment
            .small.button.gray Use Existing
        if user && user.payment_method && user.payment_method.token
          .existing_payment
            .type
              =user.payment_method.card_type
            .expiry
              =user.payment_method.expiry_month
              | /
              =user.payment_method.expiry_year
            .last_4
              | **** - **** - **** - 
              =user.payment_method.last_four_digits
            .small.button.gray Use New Card
        form(action='https://api.samurai.feefighters.com/v1/payment_methods',method='POST')
          input(name='redirect_url', type='hidden', value='http://cards.ly/thank-you')
          input(name='merchant_key', type='hidden', value='89b14db44561382d457b5160')
          input(name='sandbox', type='hidden', value='true')
          ul.form
            li
              label Card Number
              input.card_number(name='credit_card[card_number]')
            li
              label CVC
              input.cvv(name='credit_card[cvv]')
            li.expiration
              label Expiration
              select.card_expiry_month(name='credit_card[expiry_month]')
                - months = ['January','February','March','April','May','June','July','August','September','October','November','December']
                - for (var i in months)
                  option(value=(i*1)+1)=months[i]
              select.card_expiry_year(name='credit_card[expiry_year]')
                - for (var year = 2011; year<2032; year++)
                  option(value=year)=year
          .img_loader
            input(type='submit',value'Submit')
        .clear
        if error_message
          .error=error_message
        .button.normal.checkout Purchase
      .clear

