
.gallery_select
.design_container
  .section.first
    .cell_bg
    .cell_content
      h3 Step 1 : Design Your Cards
      p.subtitle Please type your name (hit enter to go to next line):
      .active_view
        if session && session.saved_form && session.saved_form.active_view
          =session.saved_form.active_view
      .active_theme_id
        if session && session.saved_form && session.saved_form.active_theme_id
          =session.saved_form.active_theme_id
      .home_designer
        .card_container
          .card
            .qr
              .background
            if session && session.saved_form && session.saved_form.values && session.saved_form.values.length
              .content
                - for(var i=0; i<session.saved_form.values.length; i++)
                  .line
                    =session.saved_form.values[i]
            else
              .content.defaults
                .line John Stamos
                .line Uncle Jesse
                .line 555.555.5555
                .line john@stamos.com
                .line
                .line
                .line
                .line
                .line
                .line
      .home_options
        .views
          .subtitle Number of Fields
          .toggle
            .disabled
              .option.six.active 6
              .option.twelve 10
      .categories
  .clear
.section
  .cell_bg
  .cell_content
    h3 Step 2 : Select quantity and sign in
    .order_details
      ul.radio_text_fields.left.quantity
        li
          p Quantity:
        - quantity = 10
        if session && session.saved_form && session.saved_form.quantity
          - quantity = session.saved_form.quantity
        li
          input(
            type='radio'
            name='quantity'
            value='10'
            checked= (quantity==10 ? 'checked' : false)
            id='quantity_1'
          )
          label(for='quantity_1') 100 cards for $10
            .subtitle 10 cents per card
        li
          input(
            type='radio'
            name='quantity'
            value='20'
            checked= (quantity==20 ? 'checked' : false)
            id='quantity_2'
          )
          label(for='quantity_2') 250 cards for $20
            .subtitle 8 cents per card
        li
          input(
            type='radio'
            name='quantity'
            value='30'
            checked= (quantity==30 ? 'checked' : false)
            id='quantity_2'
          )
          label(for='quantity_3') 500 cards for $30
            .subtitle 6 cents per card
        li
          input(
            type='radio'
            name='quantity'
            value='60'
            checked= (quantity==60 ? 'checked' : false)
            id='quantity_2'
          )
          label(for='quantity_4') 1500 cards for $60
            .subtitle 4 cents per card
      ul.radio_text_fields.right.shipping_method
        li
          p Speed:
        - shipping_method = 0
        if session && session.saved_form && session.saved_form.shipping_method
          - shipping_method = session.saved_form.shipping_method
        li
          input(
            type='radio'
            name='shipping_method'
            value='0'
            checked= (shipping_method==0 ? 'checked' : false)
            id='shipping_method_1'
          )
          label(for='shipping_method_1') USPS Priority Mail for $0
            .subtitle 1-3 days
        li
          input(
            type='radio'
            name='shipping_method'
            value='25'
            checked= (shipping_method==25 ? 'checked' : false)
            id='shipping_method_2'
          )
          label(for='shipping_method_2') USPS Express Mail for $25
            .subtitle overnight
      ul.text_fields.shipping.righter
        li
          p Shipped To:
        li
          label Address
          input.address(
            placeholder='221 Baker, Suite B'
            value= (session.saved_address ? session.saved_address.address : '')
          )
        li
          label City or Zip
          input.city(
            placeholder='90210'
            value= (session.saved_address ? session.saved_address.city : '')
          )
        li
          .address_result
            if session && session.saved_address
              span.subtitle We will ship the cards to here:
              br
              !=session.saved_address.full_address
      .clear

    .img_loader
      img(src='/images/biz_card1.png')
      .google.hover
      .facebook.hover
      .twitter.hover
      .linkedin.hover
      .new.hover
      .google.click
      .facebook.click
      .twitter.click
      .linkedin.click
      .new.click

    .signins
      if user
        p
          | Ordering cards for 
          =user.name
          =user.email
      else
        p
          .socials
            p
              | Sign in to 
              span.cardsly cards
                span.alt .ly
              | &nbsp;with:
            a.button.twitter(href='/auth/twitter')
              span Twitter
            a.button.facebook(href='/auth/facebook')
              span Facebook
            a.button.linkedin(href='/auth/linkedin')
              span LinkedIn
            a.button.google(href='/auth/google')
              span Google
            .clear
            p Or, alternatively, create a username and password:
          .local
            a.button.new(href='#')
              span Create a username and password
            .clear
.section
  .cell_bg
  .cell_content
    h3 Step 3: Confirm and Buy
    .order_total
      .my_card
      .details
        .address_result
          if session && session.saved_address
            !=session.saved_address.full_address
        .price $10
        .button.normal.checkout Buy Now!
        