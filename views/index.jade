.design_container
  .section
    .cell_bg
    .cell_content
      h3 Step 1 : Design Your Card
      p.card_title Enter your details here:
      .card.main.scott_qr_blue
        img(src='/images/qr.png').qr
        if session && session.savedInputs
          ul.content
            - for(var i=0; i<session.savedInputs.length; i++)
              input(class='nth-'+i,value=session.savedInputs[i])
        else
          ul.content.defaults
            input.nth_0(value='John Stamos')
            input.nth_1(value='Uncle Jesse')
            input.nth_2(value='555.555.5555')
            input.nth_3(value='john@stamos.com')
            input.nth_4
            input.nth_5
            input.nth_6
            input.nth_7
            input.nth_8
