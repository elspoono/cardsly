.section
  .cell_bg
  .cell_content
    h3 Step 2 : Purchase
    .order_details
      ul.radio_text_fields.left.quantity
        li
          p Quantity:
        li
          input(type='radio',name='quantity',value='10',checked='checked')
          label 100 cards for $10
            .subtitle 10 cents per card
        li
          input(type='radio',name='quantity',value='20')
          label 250 cards for $20
            .subtitle 8 cents per card
        li
          input(type='radio',name='quantity',value='30')
