.section.form_narrow
  .cell_bg
  .cell_content
    .signins
      if user
        p.subtitle I see you've already signed in.
        p
          | Welcome back 
          =user.name
          =user.email
      else
        h3 Login to 
          span.cardsly cards
            span.alt .ly
          | &nbsp;with:
        .clear.center
        .socials
          a.button.twitter(href='/auth/twitter')
            span Twitter
          a.button.facebook(href='/auth/facebook')
            span Facebook
          a.button.linkedin(href='/auth/linkedin')
            span LinkedIn
          a.button.google(href='/auth/google')
            span Google
          .clear
        h3 Or sign in manually:
        form
          ul
            li
              label.subtitle Email:
              input.email_login
            li
              label.subtitle Password:
              input(type='password').password_login
            li
              input(type='submit', value='Login').button.normal
          .clear
          p.center -or-
        .clear
        .local
          a.button.new(href='#')
            span Create a username and password
            span.subtitle username and password
          .clear
        .clear
.clear