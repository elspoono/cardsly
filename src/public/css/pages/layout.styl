// Page layout
ul
  list-style none
  margin 0
  padding 0
body
  font-size(.75)
  font-family $base-font-family
  background $c-body-bg url('/images/little_pluses.png')
  overflow hidden
input,li
  font-size(1)
#container
  max-width 850px
  margin 0 auto

// Every PAge

// cardsly
.cardsly
  gradient($c-bg-light,$c-bg-dark)
  padding 0 2px 0 5px
  height 5px
  border-radius(5px)
  color $c-logo-light
  .alt
    color $c-logo-alt



// Modal BAckgrounds
.modal
  z-index 200
  gradient($c-bg-light,$c-bg-dark)
  opacity(.6)
  height 100%
  width 100%
  absolute()
.close
  font-size 1em
  padding 4px 30px
  background semi-light
  alpha-bg($c-light,.75)
  color semi-dark
  absolute()
  z-index 201
  cursor pointer
  border-radius-top-only(8px)
.window
  z-index 201
  alpha-bg($c-light,.9)
  border-radius-except-top-right(8px)
  color $c-black
  padding 30px
  absolute()
  overflow hidden
  /**************************************
   *
   * Buttons at the bottom of most windows
   *
   **************************************/
  .buttons
    overflow hidden
    width 100%
    .submit,.cancel
      margin 30px 0 0 0
      font-size 1.2em
      border 1px solid $c-bg-dark
      border-radius(4px)
      padding 0 30px
    .cancel
      background semi-light
      color semi-dark
    .submit
      float right
      margin-left 15px
      submit()
    .cancel
      margin-right 15px
      float left







// Header
header
  position relative
  z-index 50
  margin 80px 0 0 50px
  gradient($c-bg-light,$c-bg-dark)
  height 46px
  .logo img
    margin -45px 0 0 -50px
    float left
    position relative
    z-index 50
  .design-button.top
    position absolute
    top 75px
    right 0
  h1
    position absolute
    top 75px
    color $c-logo-light
    .alt
      color $c-logo-alt
    font-size(1.5)
  .navigation
    gradient($c-bg-light,$c-bg-dark)
    float right
    margin 0
    border-radius()
    li
      margin 0
      float left
      a
        text-decoration none
        color $c-a-nav
      border-right 1px solid $c-a-nav
      padding 7px 30px
      border-radius(14px)
.header-back
  gradient($c-bg-light,$c-bg-dark)
  width 50%
  top 80px
  right 0
  height 46px
  position absolute

// Sections
.card-list
  th,td
    text-align left
    padding 10px
  td
    border-right 1px solid $c-bg-dark
  input
    margin-bottom 5px
.section
  margin gap(3) 0
  padding gap(1)
  color $c-black
  position relative
.section.left
  width 380px
  float left
.section.right
  width 300px
  float right
.section.first
  margin gap(4) 0 gap(3) 0
.cell-content
  z-index 150
  position relative
.cell-bg
  gradient($c-bg-light,$c-bg-dark)
  opacity(.6)
  color $c-light
  border-radius()
  box-shadow(5px,$c-black,16px)
  height 100%
  width 100%
  position absolute
  top 0
  left 0
  z-index 20



// Regular Handlers

// Hide Images
.img-loader
  display none
.clear
  clear both

// Buttons

// Button Styles
.button.normal
  gradient($c-logo-alt,darken($c-logo-alt,20))
  width 120px
  text-align center
  padding 8px 15px
  border-radius(10px)
  margin 0 auto
  box-shadow(1px,$c-black)
  font-size(1.2)
  color $c-light
.button.normal.hover
  color darken($c-light,20)
  gradient(darken($c-logo-alt,10),darken($c-logo-alt,30))
.button.normal.click
  padding 11px 12px 5px 18px
  gradient(darken($c-logo-alt,20),darken($c-logo-alt,40))
  

// Add Button
