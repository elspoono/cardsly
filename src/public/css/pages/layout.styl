// Page layout
body
  font-size(1)
  font-family $base-font-family
  background $c-background url('/images/little_pluses.png')
  border-top gap(1) solid $c-dark-warm
  border-bottom gap(.5) solid $c-dark-warm

#container
  max-width 900px
  margin gap(2) auto
  background $c-bg-dark
  color $c-light
  padding 1px 0
  border-radius()
  box-shadow()
#main
  margin gap(1)
.logo
  color $c-logo-light
  font-size(.6)