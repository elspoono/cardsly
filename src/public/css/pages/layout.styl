// Home Page Stuff

// Meh
.section
  h3
    border-bottom 15px solid $c-bg-light
    margin-bottom 30px
    padding-bottom 10px

// Hand Container
.hand-container-container
  position absolute
  z-index 0
  top 200px
  left 0
  width 100%
  overflow hidden
  height 500px
  padding-top 250px
  .hand-container
    width 1000px
    display block
    margin 0 auto
    position relative
    .card
      position absolute
      box-rotate(-15deg)
      background url('/images/card-bg-small/scott-qr-blue.png')
      height 114px
      width 200px
      .content
        margin 5px 10px
      left -1px
      top -50px
      font-size(.5)
      .qr
        height 35px
        width 35px
        position absolute
        margin 15px 0 0 140px
        box-rotate(45deg)
    .hand
      position absolute
      top 0
      left -200px

// Business Cards
.card.main
  width 420px
  height 240px
  display block
  margin 0 auto
.card
  .qr
    position absolute
.scott-qr-blue
  background url('/images/card-bg/scott-qr-blue.png')
  color #dcff18
  font-family Times New Roman
  .content
    padding 30px 20px
  .qr
    height 70px
    width 70px
    margin 30px 0 0 280px
    box-rotate(45deg)
.blue-green-gradient
  background url('/images/card-bg-small/blue-green-gradient.png')
.circles-blue
  background url('/images/card-bg-small/circles-blue.png')
.gray-blue-gradient
  background url('/images/card-bg-small/gray-blue-gradient.png')
.kickback-blue
  background url('/images/card-bg-small/kickback-blue.png')
.kickback-tan
  background url('/images/card-bg-small/kickback-tan.png')
.tri-color
  background url('/images/card-bg-small/tri-color.png')
.blue
  background url('/images/card-bg-small/blue.png')
.blue
  background url('/images/card-bg-small/blue.png')



// Card Galleries
.gallery
  overflow hidden
  li
    height 114px
    width 200px
    float left
    margin 30px
// Form Layout
.text-fields
  margin 30px
  .suggestions
    color darken($c-bg-dark,10)
    font-size(.5)
    line-height 1em
  textarea
    width 100%
    height 75px
    margin 0
  label
    color $c-light
    margin 20px 0 5px 0
    font-size(.65)
  input
    width 300px
    max-width 100%
    display block
    font-size(.8)
  li
    float left
    margin 0 25px
.radio-text-fields
  margin 0 0 30px 0
  label
    color $c-light
    font-size(.65)
  input
    margin 10px 10px 0 0
    float left
    width auto

// Slides
.section.home-first
  padding 0
.phone-left
  width 200px
  margin 30px 0 30px 30px
  float left
.slides
  width 620px
  height 465px
  float left
  position relative
  .arrow-left,.arrow-right
    cursor pointer
    height 35px
    width 21px
    position absolute
    z-index 250
    top 202px
  .arrow-left
    background url('/images/arrow-left.png')
    left 5px
  .arrow-right
    background url('/images/arrow-right.png')
    right 5px
  .arrow-left.hover
    background url('/images/arrow-left-alt.png')
  .arrow-right.hover
    background url('/images/arrow-right-alt.png')
  h2.prompt,h2.caption
    font-size(.8)
    text-align center
  h2.prompt
    margin 0 0 10px 0
  h2.caption
    margin 10px 0 0 0
    position absolute
    bottom 0
    width 100%
  .container
    margin-top -30px
    height 435px
    overflow hidden
    .content
      width 9000px
      li
        float left
        height 345px
        margin 30px
        width 560px
        img
          margin 0 auto
          display block
      .first
        margin-top 75px
      .second
        margin-top 30px
      .third
        margin-top 75px