// Basic typographic rules and colors

body, select, input, textarea
  color $c-font

h1, h2, h3
  font-weight normal
  text-shadow 0 1px 1px rgba(0,0,0,0.3)

h1 
  font-family $display-font-family
  font-size(2.4)

p, ol, ul, table
  margin-bottom gap(1)
  
h1, h2, h3, h4, h5, h6
  margin-bottom gap(0.5)
