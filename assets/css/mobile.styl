.section
  padding 15px
.header
  h1
    display none
  .logo img
    margin-top -25px
    width 250px
  .design_button
    display none
.header
  .navigation
    li
      a
        relative-size(.8)
      padding 3px 15px
.home_designer
  .card_container
    padding 0
    width 283px
    float left
.home_options
  width 280px
  margin 0
.footer
  .us_pics
    li
      margin 45px 10px 0 10px
.promo_img
  transform_scale(.8)
.help_container
  .help_trigger,.help_close
    right 0
  .help_img
    transform_scale(.5)
  .enter_card .help_img
    margin 40px 0 0 -70px
  .click_more_card .help_img
    margin -55px -40px 0 0
    float right
  .choose_card_design .help_img
    margin -230px 0 0 -40px
  .double_check .help_img
    margin 80px 0 0 0
    float left
  .enter_price .help_img
    margin 0 0 0 -80px
    float left
.order_details
  .left, .right, .righter
    float left
    margin 0px
    width 200px
  .right,.righter
    margin 0
  .address_result
  label
    relative_size(.5)
.order_total
  .my_card
    height 150px
    width 263px
    clear both
    display block
  .card_side
    float none
    display block
  .details
    float none
    display block
.order_total,.home_designer
  .card
    transform_scale(.5)
    margin -75px 0 -50px -120px
.chat
  opacity(.45)
  img
    width 65px
    right -17px

.feedback_form
  input
  margin 15px auto
.feedback_text
  font-size 14px
  width 350px
.emailNotUser
  font-size 12px
  width 1000px
.feedback
  top 40%
  right -45px
  cursor pointer
  position fixed
  z-index 500
  opacity(.5)
  a
    height 20px
    line-height 14px
    font-size 10px
    text-align center
    margin-left 5px
    padding 0 10px 20px 10px
    background $c_extra_dark
    border 3px solid $c_light
    border-bottom none
    display block
    box_rotate(270deg)
    relative_size(1)
    color $c_light
    text-decoration none