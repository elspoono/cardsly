
// Palette One
color_two = #000
color_two_alt = #FFF
color_three = #000
color_four = #DED4B9
color_five = #64B6B1
color_six = #ce6d4e



size_one = 32px

huge_text = FFFTusjBold
accent_text = EdoRegular
normal_text = Trebuchet MS

body
  background color_four
  background url('/images/body_bg.png')

.pull_down
  cursor pointer
  position absolute
  left 50%
  top -460px
  img
    margin 0 0 0 -75px

.logo
  display none
  height 56px
  width 160px
  background url('/images/logo-160x56.png')
  margin -60px auto 0 auto

.center_column
  width 1024px
  margin 0 auto

.navigation
  alpha_bg(color_two,1)
  height 64px
  line-height 64px
  ul
    margin 0 -20px
  .left
    float left
  .right
    float right
  a
    font-size size_one
    color color_five
    text-decoration none
    font-family accent_text
  li
    float left
    margin 0 20px
  .hover
    a
      color color_four


h1
  color color_three
  font-family accent_text

.hero
  margin 40px 0 0 0
  .top
    overflow visible
  .left
    float left
  .right
    float right
    text-align right
  .bottom
    .left
      width 525px
    .right
      text-align center
      width 280px

h1.one
  font-family huge_text
  .one
    color color_three
    font-size 60px
    text-align left
  .two
    font-size 140px
    color color_three
  .three
    color color_five
    font-size 260px
    text-align left


.clear
  clear both

h1.two
  .one
    font-size 48px
  .two
    font-size 16px

.qr_action
  float right
  width 200px
  font-size 48px
  line-height 24px
  text-align center
  margin -140px 0 0 0
  text-decoration none
  img
    border 0

input
  padding 0 10px
  line-height 32px
  font-size 18px
  border 0

.notify_form
  width 280px
  background color_six
  margin-top -160px
  position relative
  h2
    font-family accent_text
    font-size 32px
    margin 30px 0 0 0
    padding 30px 0 0 0
    border-top 1px solid color_two
  p
    font-family normal_text
    margin 20px
  .field
    overflow hidden
  .street,.zip_code
    input
      width 90px
    img
      float right
      margin 15px
  .quantity
    input
      width auto
    label
      float right
      margin 15px
      font-family normal_text
    overflow hidden
  input
    font-family accent_text
    height 40px
    line-height 40px
    float left
    width 120px
    margin 15px
  .toggle
    float right
    margin 15px
    overflow hidden
    gradient(darken(color_five,20),color_five)
    border_radius(10px)
    box_shadow(0,color_two,5px,inset)
    .option
      border_radius(10px)
      height 40px
      line-height 40px
      padding 0 5px
      float left
      color color_two_alt
      font-family accent_text
    .active
      gradient(color_five,darken(color_five,20))
      box_shadow(0,color_two,5px)

.home_designer
  overflow visible
  .themes
    margin 40px 0
    img
      margin 0
      cursor pointer
      opacity(.3)
      width 126px
      height 72px
      z-index 50
      position relative
    .active
      margin -13px -20px
      border 4px solid color_three
      opacity(1)
      width 158px
      height 90px
      z-index 150
      box_shadow(0,color_three,10px)
    .hover
      opacity(.8)
  .card
    width 525px
    height 300px
    background #FFF
    box_shadow(0,darken(color_four,10),20px)
    float left
  .controls
    float left
    margin 40px 0 0 0
    width 525px

    .area
      width 600px
      height 300px
      background color_five
      display none
      padding 20px
      input
        width 140px
        margin 10px 20px
    .area.active
      display block
  
    .titles
      overflow hidden
    .title
      background color_five
      color color_three
      font-family accent_text
      font-size 18px
      float left
      padding 0 20px
      margin 15px 1px 0 0
      height 32px
      line-height 32px
      cursor pointer
    .title.hover
      color color_four
    .title.active
      margin 0 1px 0 0
      font-size 32px
      height 48px
      line-height 48px
