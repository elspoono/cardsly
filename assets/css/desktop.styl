
// Palette One
color_two = #46433A
color_two_alt = #FFF
color_three = #46433A
color_four = #DED4B9
color_five = #64B6B1
color_six = #CE534D



size_one = 32px

huge_text = FFFTusjBold
accent_text = EdoRegular

body
  background color_four
  background url('/images/patterns/ricepaper2.png')

.overlay
  position absolute
  width 100%
  height 100%
  z-index -1
  alpha_bg(color_four,.4)

.logo
  display none
  height 56px
  width 160px
  background url('/images/logo-160x56.png')
  margin -60px auto 0 auto

.center_column
  width 1024px
  margin 0 auto

.navigation
  alpha_bg(color_two,1)
  height 64px
  line-height 64px
  margin 0 -20px
  .left
    float left
  .right
    float right
  a
    font-size size_one
    color color_five
    text-decoration none
    font-family accent_text
  li
    float left
    margin 0 20px


h1
  color color_three
  font-family accent_text

.hero
  margin 40px 0 0 0
  img
    margin 10px 0 60px 0
  .top
    overflow hidden
  .right
    float right
    text-align right
  .bottom
    margin 80px 0 20px 0
    overflow hidden

h1.one
  font-family huge_text
  .one
    color color_six
    font-size 60px
    text-align left
  .two
    font-size 140px
    color color_three
  .three
    color color_five
    font-size 260px
    text-align left

.clear
  clear both

h1.two
  float left
  width 500px
  .one
    font-size 60px
  .two
    font-size 20px

.qr_action
  float right
  width 200px
  font-size 48px
  line-height 24px
  text-align center
  margin -140px 0 0 0
  text-decoration none
  img
    border 0

.call_to_action
  margin 0 0 120px 0
  overflow hidden
  clear both
  .four
    text-align center
    font-size 48px
.socials
  float right
  overflow hidden
  .social_bg
    z-index: -1
    position absolute
    font-family huge_text
    font-size 800px
    line-height 40px
    margin -360px 0 0 40px
    color color_six
  li
    cursor pointer
    float left
    background color_three
    color color_four
    border_radius(20px)
    height 40px
    width 40px
    font-family JustVector
    font-size 20px
    line-height 40px
    text-align center
    margin 15px
    box_shadow(0,color_three,5px)

  .shift
    line-height 46px
  .shift_2
    line-height 43px


input
  padding 0 10px
  line-height 32px
  font-size 18px
  border 0


.home_designer
  overflow hidden
  .card
    width 525px
    height 300px
    background #FFF url('/images/patterns/retrotartan_aaskie (9).png')
    float left
  .phone
    width 320px
    height 480px
    background #FFF url('/images/patterns/retrotartan_aaskie (9).png')
    float right
  .controls
    float left
    margin 40px 0 0 0
    width 525px

    .area
      width 600px
      height 300px
      background color_five
      display none
      padding 20px
      input
        width 140px
        margin 10px 20px
    .area.active
      display block
  
    .titles
      overflow hidden
    .title
      background color_five
      color color_three
      font-family accent_text
      font-size 18px
      float left
      padding 0 20px
      margin 15px 1px 0 0
      height 32px
      line-height 32px
      cursor pointer
    .title.active
      margin 0 1px 0 0
      font-size 32px
      height 48px
      line-height 48px
