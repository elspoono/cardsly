color_one = #E03

color_two = #000
color_two_alt = #FFF
color_three = #333
color_four = #FFFFFF

size_one = 32px

huge_text = FFFTusjBold
accent_text = EdoRegular

body
  background color_four
  background url('/images/patterns/ricepaper2.png')

.overlay
  position absolute
  width 100%
  height 100%
  z-index -1
  alpha_bg(color_three,.1)

.logo
  display none
  height 56px
  width 160px
  background url('/images/logo-160x56.png')
  margin -60px auto 0 auto

.center_column
  width 1024px
  margin 0 auto

.navigation
  background color_three
  height 64px
  line-height 64px
  .left
    float left
  .right
    float right
  a
    font-size size_one
    color color_two_alt
    text-decoration none
    font-family accent_text
  li
    float left
    margin 0 10px


h1
  font-family accent_text

.hero
  margin 40px 0 0 0
  img
    margin 10px 0 60px 0
  .top
    overflow visible
  .left
    display none
    margin 40px 0 0 0
    float left
    text-align left
  .right
    width 750px
    float right
    text-align right

h1.one
  color color_one
  font-size 160px
  line-height 200px
  font-family huge_text




h1.two
  font-size size_one
  line-height size_one
  color color_three

.socials
  float right
  margin 50px 0
  overflow hidden
  li
    cursor pointer
    float left
    background color_three
    color color_two_alt
    border_radius(20px)
    height 40px
    width 40px
    font-family JustVector
    font-size 20px
    line-height 40px
    text-align center
    margin 15px
    box_shadow(0,color_three,5px)

  .shift
    line-height 46px
  .shift_2
    line-height 43px